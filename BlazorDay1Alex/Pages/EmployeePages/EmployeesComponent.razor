@page "/Emps"
<PageTitle>Employees Data</PageTitle>
<h3>EmployeesComponent</h3>
@if (EmpList != null)
{
    <table class="table table-bordered table-hover">
        @foreach (var item in EmpList)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Emps/@item.Id">DEtails</a></td>
                <td><a href="/Emps/Edit/@item.Id">Edit</a></td>

            </tr>
        }
    </table>
}
else
{
    <h1>Wait...</h1>
}



@code {
    public List<Employee> EmpList { get; set; }
    
    [Inject]//ask any on e object "IOC Container | Service Provider"
    public IService<Employee> EmpService { get; set; }//DIP

    protected override void OnInitialized()
    {
        //EmpService = new EmployeeService();
        EmpList = EmpService.GetAll();
        base.OnInitialized();
    }

}
